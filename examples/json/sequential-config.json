{
    "dataset_params": {
        "class_name": "HDF5Reader",
        "config": {
            "filename": "../../mnist.h5",
            "batch_size": 100,
            "x_name": "x",
            "y_name": "y",
            "batch_cache": 10,
            "preprocessors": [
                {
                    "class_name": "SingleChannelPreprocessor",
                    "config": {}
                },
                {
                    "class_name": "KerasImagePreprocessorX",
                    "config": {
                        "scale_down": 255
                    }
                }
            ]
        }
    },
    "train_params": {
        "epochs": 5,
        "callbacks": [
            {
                "class_name": "CSVLogger",
                "config": {
                    "filename": "../../mnist_log.csv"
                }
            },
            {
                "class_name": "ModelCheckpoint",
                "config": {
                    "monitor": "val_loss",
                    "filepath": "../../mnist.{epoch:02d}-{val_loss:.2f}.h5",
                    "period": 1
                }
            }
        ]
    },
    "input_params": {
        "shape": [
            28,
            28,
            1
        ]
    },
    "model_params": {
        "loss": "sparse_categorical_crossentropy",
        "optimizer": {
            "class_name": "adam"
        },
        "metrics": [
            "accuracy"
        ]
    },
    "architecture": {
        "type": "Sequential",
        "layers": [
            {
                "class_name": "Flatten"
            },
            {
                "class_name": "Dense",
                "config": {
                    "units": 128,
                    "activation": "relu"
                }
            },
            {
                "class_name": "Dropout",
                "config": {
                    "rate": 0.2
                }
            },
            {
                "class_name": "Dense",
                "config": {
                    "units": 10,
                    "activation": "softmax"
                }
            }
        ]
    }
}
